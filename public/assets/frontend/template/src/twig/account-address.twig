<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% include '_required-css.twig' %}

    {% include '_template-css.twig' %}

    <title>My Address - {{title}}</title>
  </head>
  <body>

    {% include '_header.twig' with {'active':'account', 'sub':'account-address'} %}

    <!-- Main Content -->
    <div class="container my-3">
      <div class="row">

        <div class="col-md-4 col-lg-3">
          {% include '_card-user.twig' with {'active':'account', 'sub':'account-address'} %}
        </div>

        <div class="col mt-3 mt-md-0">
          <div class="card">
            <div class="card-body">
              <h3>Billing Address</h3><hr>
              <form class="form-style-1">
                <div class="form-row">
                  <div class="form-group col-12">
                    <label for="billingAddress">Address</label>
                    <input type="text" class="form-control" id="billingAddress" value="{{user.address}}">
                  </div>
                  <div class="form-group col-6 col-sm-5">
                    <label for="billingCountry">Country</label>
                    <select class="form-control custom-select" id="billingCountry">
                      <option>Choose country</option>
                      <option value="Australia"{% if (user.country == 'Australia') %} selected {% endif %}>Australia</option>
                      <option value="Canada"{% if (user.country == 'Canada') %} selected {% endif %}>Canada</option>
                      <option value="France"{% if (user.country == 'France') %} selected {% endif %}>France</option>
                      <option value="Germany"{% if (user.country == 'Germany') %} selected {% endif %}>Germany</option>
                      <option value="Switzerland"{% if (user.country == 'Switzerland') %} selected {% endif %}>Switzerland</option>
                      <option value="USA"{% if (user.country == 'USA') %} selected {% endif %}>United States</option>
                    </select>
                  </div>
                  <div class="form-group col-6 col-sm-5">
                    <label for="billingCity">City</label>
                    <input type="text" class="form-control" id="billingCity" value="{{user.city}}">
                  </div>
                  <div class="form-group col-3 col-sm-2">
                    <label for="billingZip">ZIP Code</label>
                    <input type="number" class="form-control" id="billingZip" value="{{user.zip}}">
                  </div>
                </div>
                <div class="form-group">
                  <button type="button" class="btn btn-primary">UPDATE ADDRESS</button>
                </div>
              </form>
              <h3 class="mt-5">Shipping Address</h3><hr>
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="shippingAddress" checked>
                <label class="custom-control-label" for="shippingAddress">Same as billing address</label>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
    <!-- /Main Content -->

    {% include '_footer.twig' %}

    {% include '_modal-menu.twig' with {'active':'account', 'sub':'account-address'} %}

    {% include '_required-js.twig' %}

    {% include '_template-js.twig' %}

  </body>
</html>