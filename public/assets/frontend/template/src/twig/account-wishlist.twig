<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% include '_required-css.twig' %}

    <!-- PLUGINS FOR CURRENT PAGE -->
    <link rel="stylesheet" href="../plugins/noty/noty.min.css">

    {% include '_template-css.twig' %}

    <title>My Wishlist - {{title}}</title>
  </head>
  <body>

    {% include '_header.twig' with {'active':'account', 'sub':'account-wishlist'} %}

    <!-- Main Content -->
    <div class="container my-3">
      <div class="row">

        <div class="col-md-4 col-lg-3">
          {% include '_card-user.twig' with {'active':'account', 'sub':'account-wishlist'} %}
        </div>

        <div class="col mt-3 mt-md-0">
          <div class="card">
            <div class="card-body">
              <h3>My Wishlist</h3><hr>
              {% for item in wishlist %}
              <div class="card card-product card-product-list shadow-none border-bottom">
                <a href="shop-single.html"><img class="card-img-top" src="../img/products/{{item.img}}" alt="Card image cap"></a>
                <div class="card-body d-flex flex-column justify-content-center">
                  <a href="shop-single.html" class="card-title">{{item.name}}</a>
                  <div class="attr">
                    <div class="price mr-3"><span class="h5">{{item.price}}</span></div>
                    {% if item.stock == 1 %}<div><i data-feather="check-circle" class="text-success"></i> In Stock</div>{% else %}<div><i data-feather="x-circle" class="text-danger"></i> Out of Stock</div>{% endif %}
                  </div>
                  <p class="d-flex justify-content-between align-items-center">
                    <button class="btn rounded-pill btn-outline-primary atc-demo" data-addclass-on-xs="btn-sm"{% if item.stock == 0 %} disabled{% endif %}>Add to Cart</button>
                    <button class="btn btn-link btn-icon d-inline-flex text-danger" data-addclass-on-xs="btn-sm" data-toggle="tooltip" title="Remove item"><i data-feather="x"></i></button>
                  </p>
                </div>
              </div>
              {% endfor %}
              <div class="custom-control custom-checkbox mt-3">
                <input type="checkbox" class="custom-control-input" id="informCheck" checked>
                <label class="custom-control-label" for="informCheck">Inform me when item from my wishlist is available</label>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
    <!-- /Main Content -->

    {% include '_footer.twig' %}

    {% include '_modal-menu.twig' with {'active':'account', 'sub':'account-wishlist'} %}

    {% include '_required-js.twig' %}

    <!-- PLUGINS FOR CURRENT PAGE -->
    <script src="../plugins/noty/noty.min.js"></script>

    {% include '_template-js.twig' %}

    <script>
    $(function () {

      App.atcDemo()

    })
    </script>

  </body>
</html>