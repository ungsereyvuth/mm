<div class="card">
            <div class="card-body text-center">
              <img src="{{user.avatar}}" width="100" height="100" alt="User" class="rounded-circle mb-3">
              <h5 class="bold mb-0">{{user.firstName}} {{user.lastName}}</h5>
              <small class="counter">Joined {{user.joined}}</small>
              <hr>
              <div class="roboto-condensed bold" data-toggle="tooltip" title="You currently have 1,113 Points to spend.">
                <i data-feather="award" class="text-warning"></i> Points: {{user.points}}</div>
            </div>
            <div class="list-group list-group-flush">
              <a href="account-profile.html" class="list-group-item list-group-item-action{% if (sub == 'account-profile') %} active{% endif %}"><i data-feather="user" class="mr-3"></i> Profile</a>
              <a href="account-orders.html" class="list-group-item list-group-item-action{% if (sub == 'account-orders') %} active{% endif %}"><i data-feather="shopping-bag" class="mr-3"></i> Orders</a>
              <a href="account-wishlist.html" class="list-group-item has-badge list-group-item-action{% if (sub == 'account-wishlist') %} active{% endif %}"><i data-feather="heart" class="mr-3"></i> Wishlist <span class="badge rounded badge-{% if (sub == 'account-wishlist') %}light{% else %}primary{% endif %}">{{wishlist|length}}</span></a>
              <a href="account-address.html" class="list-group-item list-group-item-action{% if (sub == 'account-address') %} active{% endif %}"><i data-feather="map" class="mr-3"></i> Address</a>
              <a href="account-login.html" class="list-group-item list-group-item-action text-danger"><i data-feather="log-out" class="mr-3"></i> Logout</a>
            </div>
          </div>